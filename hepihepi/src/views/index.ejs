<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HepiHepi - Official Fansite</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="theme-toggle">
        <button id="themeBtn" aria-label="Toggle theme">
            <span class="sun">‚òÄÔ∏è</span>
            <span class="moon">üåô</span>
        </button>
    </div>

    <header class="hero">
        <div class="container">
            <h1 class="logo">HepiHepi Fansite</h1>
        </div>
    </header>

    <main class="container">
        <section class="video-section">
            <h2 class="section-title">Watch our MV</h2>
            <div class="video-wrapper">
                <iframe 
                    src="https://www.youtube.com/embed/pwmA8xA8Oic" 
                    title="Watch our MV" 
                    frameborder="0" 
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                    allowfullscreen>
                </iframe>
            </div>
        </section>

        <section class="members-section">
            <h2 class="section-title">Members</h2>
            <div class="members-grid">
                <% members.forEach(member => { %>
                    <a href="/member?memberID=<%= member.memberID %>" class="member-card">
                        <div class="member-image-wrapper">
                            <img src="/images/<%= member.image %>" alt="<%= member.name %>" class="member-image">
                        </div>
                        <h3 class="member-name"><%= member.name %></h3>
                    </a>
                <% }) %>
            </div>
        </section>
    </main>

    <footer class="footer">
        <div class="container">
            <div class="social-links">
                <a href="https://www.facebook.com/hepihepivn/" target="_blank" rel="noopener noreferrer" class="social-link">
                    <i class="fab fa-facebook"></i> Facebook
                </a>
                <a href="https://www.instagram.com/hepihepi.vn" target="_blank" rel="noopener noreferrer" class="social-link">
                    <i class="fab fa-instagram"></i> Instagram
                </a>
                <a href="https://youtube.com/@hepihepivn" target="_blank" rel="noopener noreferrer" class="social-link">
                    <i class="fab fa-youtube"></i> YouTube
                </a>
                <a href="https://www.tiktok.com/@hepihepivn" target="_blank" rel="noopener noreferrer" class="social-link">
                    <i class="fab fa-tiktok"></i> TikTok
                </a>
            </div>
            <p>&copy; 2026 HepiHepi Fansite. All rights reserved.</p>
        </div>
    </footer>

    <script src="/js/theme.js"></script>
</body>
</html>